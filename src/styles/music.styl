$ctx = music
$headerHeight = 48px
$sideWidth = 320px;

.{$ctx}

  &__header
    position fixed
    z-index 110
    width 100%

  &__navbar-panel
    position relative
    color #fff
    background #5b5d5f
    height $headerHeight

  &__navbar-btn
    display inline-block
    box-sizing border-box
    font-size 15px
    color #fff
    height $headerHeight
    vertical-align top
    padding 4px 18px
    cursor pointer
    line-height 37px
    transition opacity 0.2s ease

  &__navbar-center
    text-align center
    padding-top 12px

  &__navbar-left,
  &__navbar-right
    position absolute
    top 0
    bottom 0

  &__navbar-left
    left 0

  &__player-btn
    display inline-block
    vertical-align top
    line-height 22px
    height 22px
    padding 0 5px
    font-size 14px

  &__player-btn &__player-icon
    vertical-align middle

  &__player-btn_name_pause &__player-icon,
  &__player-btn_name_play &__player-icon
    font-size 22px

  &__timeline
    background #e6e6e6
    position relative
    color #fff
    height 22px
    font-size 12px
    line-height 22px
    text-align center

  &__timeline-trail
    position relative
    margin-right 50px

  &__timeline-actions
    position absolute
    top 0
    right 0
    width 50px
    height 100%
    background #c8c8c8
    line-height 30px

  &__timeline-buffer,
  &__timeline-seek,
  &__timeline-progress
    position absolute
    top 0
    left 0
    height 22px
    width 0

  &__timeline-buffer
    transform translateZ(0)
    background #dadada

  &__timeline-seek
    opacity 0
    transform translateZ(0)
    transition opacity 0.4s
    background #2aa0e6

  &__timeline-progress
    transform translateZ(0)
    transition width 1s
    overflow hidden

    background #2aa0e6

  &__timeline-info
    position relative
    color #515151

  &__timeline-progress &__timeline-info
    color #fff

  &__timeline-time
    position absolute
    top 0
    left 12px

  &__timeline-length
    position absolute
    top 0
    right 20px

  &__albums-item
    display inline-block

  &__side,
  &__content
    position fixed
    top 0
    padding-top $headerHeight

  &__side
    width $sideWidth
    padding-top $headerHeight

  &__content
    width 100%
    padding-top $headerHeight
    padding-left $sideWidth

  &__empty
    padding 40px
    text-align center
    opacity 0.5

  &__empty-icon
    font-size 60px

  &__empty-message
    font-size 18px

