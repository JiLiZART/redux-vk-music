$ctx = app
$playerHeight = 42px
$playerHeightMobile = 84px

.{$ctx}
  width 100%

  .{$ctx}__bar
    position fixed
    width 100%
    height 44px
    margin 0 auto
    bottom 0
    background #fafbfc
    border-top 1px solid #e7e8ec
    z-index 13
    display none

    +mobile()
      height ($playerHeight* 3)

    &_visible
      display block

    &:before
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background inherit
      filter blur(10px) saturate(2)

  .{$ctx}__header
    position fixed
    height 42px
    width 100%
    left 0
    top 0
    z-index 2

  .{$ctx}__body
    padding 42px 15px 0
    margin 0 auto
    width 100%
    max-width 1440px
    box-sizing border-box

    +mobile()
      padding 42px 5px 0

  &.{$ctx}_player .{$ctx}__body
    padding-bottom $playerHeight

    +mobile()
      padding-bottom ($playerHeight* 3)

  .{$ctx}__section
    display flex

  .{$ctx}__nav
    position fixed
    top 42px
    bottom 0
    z-index 1

    overflow-y auto

    transform translate3d(-280px, 0, 0)
    transition transform 0.4s

    padding-top 25px
    flex-basis 280px
    width 280px
    background #edeef0

    +desktop()
      transform translate3d(0, 0, 0)

  &.{$ctx}_player .{$ctx}__body
    bottom $playerHeight

    +mobile()
      bottom ($playerHeight* 3)

  .{$ctx}__content
    transition transform 0.4s
    margin-top 25px
    flex-basis 100%
    min-height 600px
    background #fff
    border-radius 2px
    box-shadow 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8

    +desktop()
      margin-left 280px

  &.{$ctx}_menu
    .{$ctx}__nav
      transform translate3d(0, 0, 0)

    .{$ctx}__content
      transform translate3d(280px, 0, 0)

      +desktop()
        transform translate3d(0, 0, 0)
        margin-left 280px
