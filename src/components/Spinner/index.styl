$ctx = spinner

.spinner {
  display: inline-block;
  font-size: 8px;
  height: 8px;
  position: relative;
  text-align: center;
  vertical-align: middle;
}

.spinner__dot {
  -webkit-animation: pulse 1s infinite ease-in-out;
  -o-animation: pulse 1s infinite ease-in-out;
  animation: pulse 1s infinite ease-in-out;
  height: 1em;
  width: 1em;
  border-radius: 50%;
  display: inline-block;
  vertical-align: top;
}

.spinner__dot_second {
  -webkit-animation-delay: 160ms;
  animation-delay: 160ms;
  margin-left: 1em;
}

.spinner__dot_third {
  -webkit-animation-delay: 320ms;
  animation-delay: 320ms;
  margin-left: 1em;
}

.spinner_type_default > .spinner__dot {
  background-color: #999;
}

.spinner_type_primary > .spinner__dot {
  background-color: #5e81a8;
}

.spinner_type_inverted > .spinner__dot {
  background-color: white;
}

.spinner_type_default > .spinner__dot {
  background-color: #999;
}

.spinner_type_primary > .spinner__dot {
  background-color: #5e81a8
}

.spinner_type_inverted > .spinner__dot {
  background-color: white;
}

.spinner_size_sm {
  font-size: 4px;
  height: 4px;
}

.spinner_size_lg {
  font-size: 16px;
  height: 16px;
}

@-webkit-keyframes pulse {
  0%,
  80%,
  100% {
    opacity: 0;
  }
  40% {
    opacity: 1;
  }
}

@keyframes pulse {
  0%,
  80%,
  100% {
    opacity: 0;
  }
  40% {
    opacity: 1;
  }
}
